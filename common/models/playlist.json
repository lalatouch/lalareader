{
	"name": "playlist",
	"plural": "playlists",
	"base": "PersistedModel",
	"idInjection": true,
	"options": {
		"validateUpsert": true
	},
	"properties": {
		"title": {
			"type": "string",
			"required": true,
			"default": "No Title"
		}
	},
	"validations": [],
	"relations": {
		"tracks": {
			"type": "hasAndBelongsToMany",
			"model": "track",
			"through": "playlistTrack"
		},
		"module": {
			"type": "hasOne",
			"model": "Module",
			"foreignKey": "playlistId"
		},
		"tags": {
			"type": "hasAndBelongsToMany",
			"model": "Tag",
			"through": "TagLink",
			"polymorphic": "taggable"
		}
	},
	"acls": [],
	"methods": {
		"prototype.play": {
			"accepts": [],
			"returns": [],
			"http": {
				"path": "/play"
			}
		},
		"prototype.shuffle": {
			"accepts": [],
			"returns": [],
			"http": {
				"path": "/shuffle"
			}
		},
		"next": {
			"accepts": [],
			"returns": [],
			"http": {
				"path": "/next"
			}
		},
		"previous": {
			"accepts": [],
			"returns": [],
			"http": {
				"path": "/previous"
			}
		}
	}
}
